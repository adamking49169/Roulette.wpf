<controls:MetroWindow x:Class="Roulette.Wpf.Views.RouletteWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:viewModels="clr-namespace:Roulette.Wpf.ViewModels"
    xmlns:views="clr-namespace:Roulette.Wpf.Views"
    xmlns:conv="clr-namespace:Roulette.Wpf.Converters"
                      xmlns:controlsLocal="clr-namespace:Roulette.Wpf.Views.Controls"
    Title="Roulette" Width="1180" Height="820" WindowStartupLocation="CenterScreen">

    <!-- ViewModel -->
    <controls:MetroWindow.DataContext>
        <viewModels:GameViewModel/>
    </controls:MetroWindow.DataContext>

    <!-- Resources -->
    <controls:MetroWindow.Resources>
        <!-- Felt + number colours -->
        <SolidColorBrush x:Key="Felt" Color="#175a2b"/>
        <SolidColorBrush x:Key="FeltDark" Color="#0f4721"/>
        <SolidColorBrush x:Key="FeltBorder" Color="#E6E6E6"/>
        <SolidColorBrush x:Key="NumRed" Color="#b12c2c"/>
        <SolidColorBrush x:Key="NumBlack" Color="#222222"/>
        <SolidColorBrush x:Key="NumGreen" Color="#0e7a3a"/>
        <SolidColorBrush x:Key="RouletteRed" Color="#c62828"/>
        <SolidColorBrush x:Key="RouletteBlack" Color="#111111"/>
        <SolidColorBrush x:Key="RouletteGreen" Color="#0f9d58"/>

        <!-- Converters -->
        <conv:SpinColorToBrushConverter x:Key="SpinColorToBrushConverter"/>
        <conv:ValueToChipBrushConverter x:Key="ChipBrushConverter"/>
        <conv:IntToVisibilityConverter x:Key="IntToVis"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Card wrapper used on right -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <!-- ===== CHIP (casino-style) ===== -->
        <DataTemplate x:Key="ChipTemplate">
            <Grid Width="34" Height="34">
                <Ellipse Fill="{Binding ChipBrush}" Stroke="White" StrokeThickness="4" StrokeDashArray="1,2"/>
                <Ellipse Width="22" Height="22" Fill="White" Opacity="0.92"/>
                <TextBlock Text="{Binding Stake}" FontWeight="Bold" FontSize="12"
                           HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#222"/>
                <Grid.Effect>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="0" Color="#55000000"/>
                </Grid.Effect>
            </Grid>
        </DataTemplate>

        <!-- ===== NUMBER / OUTSIDE CELL ===== -->
        <DataTemplate x:Key="RectCellTemplate">
            <Button Command="{Binding DataContext.AddStakeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                    CommandParameter="{Binding Key}"
                    Background="{Binding Background}"
                    BorderBrush="{DynamicResource FeltBorder}" BorderThickness="2"
                    Margin="2" Padding="0" Height="64" Cursor="Hand">
                <Grid>
                    <TextBlock Text="{Binding Label}" Foreground="White"
                               FontSize="18" FontWeight="SemiBold"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <ContentPresenter ContentTemplate="{StaticResource ChipTemplate}"
                                      HorizontalAlignment="Right" VerticalAlignment="Top" Margin="4"
                                      Visibility="{Binding Stake, Converter={StaticResource IntToVis}}"/>
                </Grid>
            </Button>
        </DataTemplate>

        <!-- ===== COLUMN / OUTSIDE BET CELLS ===== -->
        <DataTemplate x:Key="ColumnCellTemplate">
            <Button Command="{Binding DataContext.AddStakeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                    CommandParameter="{Binding Key}"
                    Background="{Binding Background}"
                    BorderBrush="{DynamicResource FeltBorder}" BorderThickness="2"
                    Margin="2" Padding="0" Height="64" Cursor="Hand">
                <Grid>
                    <TextBlock Text="{Binding Label}" Foreground="White"
                               FontSize="18" FontWeight="SemiBold"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               RenderTransformOrigin="0.5,0.5">
                        <TextBlock.LayoutTransform>
                            <RotateTransform Angle="270"/>
                        </TextBlock.LayoutTransform>
                    </TextBlock>
                    <ContentPresenter ContentTemplate="{StaticResource ChipTemplate}"
                                      HorizontalAlignment="Right" VerticalAlignment="Top" Margin="4"
                                      Visibility="{Binding Stake, Converter={StaticResource IntToVis}}"/>
                </Grid>
            </Button>
        </DataTemplate>

        <DataTemplate x:Key="OutsideBetTemplate">
            <Button Command="{Binding DataContext.AddStakeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                    CommandParameter="{Binding Key}"
                    Background="{Binding Background}"
                    BorderBrush="{DynamicResource FeltBorder}" BorderThickness="2"
                    Margin="2" Padding="0" Height="58" Cursor="Hand">
                <Grid>
                    <TextBlock x:Name="LabelText" Text="{Binding Label}" Foreground="White"
                               FontSize="16" FontWeight="SemiBold" TextAlignment="Center"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Viewbox x:Name="RedBlackIcon" Visibility="Collapsed"
                             Width="72" Height="48"
                             HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Canvas Width="80" Height="52">
                            <Polygon x:Name="DiamondShape" Points="20,26 40,13 60,26 40,39"
                                     Stroke="White" StrokeThickness="3"
                                     Fill="Transparent"/>
                        </Canvas>
                    </Viewbox>
                    <ContentPresenter ContentTemplate="{StaticResource ChipTemplate}"
                                      HorizontalAlignment="Right" VerticalAlignment="Top" Margin="4"
                                      Visibility="{Binding Stake, Converter={StaticResource IntToVis}}"/>
                </Grid>
            </Button>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding Key}" Value="RB:Red">
                    <Setter TargetName="LabelText" Property="Visibility" Value="Collapsed"/>
                    <Setter TargetName="RedBlackIcon" Property="Visibility" Value="Visible"/>
                    <Setter TargetName="DiamondShape" Property="Fill" Value="{DynamicResource RouletteRed}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Key}" Value="RB:Black">
                    <Setter TargetName="LabelText" Property="Visibility" Value="Collapsed"/>
                    <Setter TargetName="RedBlackIcon" Property="Visibility" Value="Visible"/>
                    <Setter TargetName="DiamondShape" Property="Fill" Value="{DynamicResource RouletteBlack}"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
        <!-- ===== TALL ZERO CELL ===== -->
        <DataTemplate x:Key="ZeroCellTemplate">
            <Button Command="{Binding DataContext.AddStakeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                    CommandParameter="{Binding Key}"
                    Background="{DynamicResource NumGreen}"
                    BorderBrush="{DynamicResource FeltBorder}" BorderThickness="2"
                    Margin="2" Padding="0" Height="206" Cursor="Hand">
                <Grid>
                    <TextBlock Text="{Binding Label}" Foreground="White"
                               FontSize="26" FontWeight="Bold"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <ContentPresenter ContentTemplate="{StaticResource ChipTemplate}"
                                      HorizontalAlignment="Right" VerticalAlignment="Top" Margin="4"
                                      Visibility="{Binding Stake, Converter={StaticResource IntToVis}}"/>
                </Grid>
            </Button>
        </DataTemplate>
    </controls:MetroWindow.Resources>

    <!-- ===== LAYOUT ===== -->
    <Grid Background="#F4F6F8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="430"/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="3"
                   Text="European Roulette"
                   FontSize="20" FontWeight="SemiBold"
                   Margin="12,10,12,0"/>

        <!-- ===== LEFT: REALISTIC TABLE ===== -->
        <Border Grid.Row="1" Grid.Column="0"
                Background="{DynamicResource Felt}" CornerRadius="14"
                BorderBrush="{DynamicResource FeltBorder}" BorderThickness="2" Padding="10" Margin="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- numbers block -->
                    <RowDefinition Height="10"/>
                    <!-- gap -->
                    <RowDefinition Height="Auto"/>
                    <!-- dozens -->
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>
                    <!-- even money -->
                    <RowDefinition Height="Auto"/>
                    <!-- bankroll info -->
                </Grid.RowDefinitions>

                <!-- ==== Numbers area ==== -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="92"/>
                        <!-- zero -->
                        <ColumnDefinition Width="*" />
                        <!-- 3x12 numbers -->
                        <ColumnDefinition Width="120"/>
                        <!-- 2 to 1 buttons -->
                    </Grid.ColumnDefinitions>

                    <!-- Tall 0 -->
                    <ItemsControl Grid.Column="0" ItemsSource="{Binding ZeroCell}"
                                  ItemTemplate="{StaticResource ZeroCellTemplate}"/>

                    <!-- 3 × 12 number grid -->
                    <ItemsControl Grid.Column="1" ItemsSource="{Binding NumberCells}"
                                  ItemTemplate="{StaticResource RectCellTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="3" Columns="12"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>

                    <!-- Right 2 to 1 -->
                    <ItemsControl Grid.Column="2" ItemsSource="{Binding OutsideColumns}"
                                  ItemTemplate="{StaticResource ColumnCellTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="3" Columns="1"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </Grid>

                <!-- ==== Dozens ==== -->
                <ItemsControl Grid.Row="2" ItemsSource="{Binding OutsideDozens}"
                              ItemTemplate="{StaticResource OutsideBetTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1" Columns="3"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

                <!-- ==== Even-money ==== -->
                <ItemsControl Grid.Row="4" ItemsSource="{Binding OutsideEvenMoney}"
                              ItemTemplate="{StaticResource OutsideBetTemplate}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1" Columns="6"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
                <!-- ==== Bankroll info ==== -->
                <Border Grid.Row="5" Margin="0,18,0,0" Background="{DynamicResource FeltDark}" CornerRadius="10"
                        Padding="16" BorderThickness="1" BorderBrush="{DynamicResource FeltBorder}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <StackPanel Margin="0,0,24,0">
                            <TextBlock Text="Balance" Foreground="#E6E6E6" FontSize="12"/>
                            <TextBlock Text="{Binding Balance}" Foreground="White" FontWeight="SemiBold" FontSize="16"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Margin="0,0,24,0">
                            <TextBlock Text="Table Stake" Foreground="#E6E6E6" FontSize="12"/>
                            <TextBlock Text="{Binding TableStake}" Foreground="White" FontWeight="SemiBold" FontSize="16"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Available" Foreground="#E6E6E6" FontSize="12"/>
                            <TextBlock Text="{Binding AvailableBalance}" Foreground="White" FontWeight="SemiBold" FontSize="16"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- ===== RIGHT COLUMN: WHEEL + BETS/RESULT + CHIPS ===== -->
        <StackPanel Grid.Row="1" Grid.Column="2">

            <!-- ===== RIGHT: WHEEL (animated) ===== -->
            <Border Style="{StaticResource Card}">
                <controlsLocal:RouletteWheelControl x:Name="WheelControl"/>
            </Border>

            <!-- ===== Bets summary ===== -->
            <!--<Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Current Bets" FontWeight="SemiBold" FontSize="14"/>
                    <ListView ItemsSource="{Binding Bets}" Margin="0,8,0,0" Height="220">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Type"   Width="140" DisplayMemberBinding="{Binding Type}"/>
                                <GridViewColumn Header="Details" Width="220" DisplayMemberBinding="{Binding Description}"/>
                                <GridViewColumn Header="Stake"   Width="80"  DisplayMemberBinding="{Binding Stake}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Border>-->

            <!-- ===== Result + Balance + Spin ===== -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Border Style="{StaticResource Card}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Result" FontWeight="SemiBold" FontSize="14"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Border Width="72" Height="72" CornerRadius="36"
                                        Background="{Binding LastSpinColor, Converter={StaticResource SpinColorToBrushConverter}}">
                                    <TextBlock Text="{Binding LastSpinNumber}"
                                               VerticalAlignment="Center" HorizontalAlignment="Center"
                                               FontSize="20" FontWeight="Bold" Foreground="White"/>
                                </Border>
                                <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                    <!--<TextBlock Text="{Binding LastSpinLabel}" FontSize="14"/>-->
                                    <TextBlock Text="{Binding LastNetResult, StringFormat=Net: {0:+#;-#;0}}"
                                               FontSize="16" FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <Button Content="Spin" Width="160" Height="44" Command="{Binding SpinCommand}"/>
                            <Button Content="Clear Bets" Width="160" Margin="0,8,0,0" Command="{Binding ClearBetsCommand}"/>
                            <!--<StackPanel Orientation="Horizontal" Margin="0,12,0,0" VerticalAlignment="Center">
                                <CheckBox Content="Use seed"
                                          IsChecked="{Binding UseSeed}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,8,0"/>
                                <TextBox Width="100"
                                         Height="26"
                                         VerticalContentAlignment="Center"
                                         IsEnabled="{Binding UseSeed}"
                                         Text="{Binding SeedText, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>-->
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
            <!-- ===== Chip picker ===== -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Chips" Margin="0,0,0,6" FontWeight="SemiBold"/>
                    <ListBox ItemsSource="{Binding ChipValues}"
                             SelectedItem="{Binding SelectedChipValue, Mode=TwoWay}"
                             BorderThickness="0" Background="Transparent">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="34" Height="34" Margin="0,0,8,8">
                                    <Ellipse Fill="{Binding Converter={StaticResource ChipBrushConverter}}"
                                             Stroke="White" StrokeThickness="4" StrokeDashArray="1,2"/>
                                    <Ellipse Width="22" Height="22" Fill="White" Opacity="0.92"/>
                                    <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="12"
                                               HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#222"/>
                                    <Grid.Effect>
                                        <DropShadowEffect BlurRadius="6" ShadowDepth="0" Color="#55000000"/>
                                    </Grid.Effect>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="ToolTip" Value="{Binding}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="8" ShadowDepth="0" Color="#88000000"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </StackPanel>
            </Border>

        </StackPanel>
        <!-- ===== RECENT NUMBERS ===== -->
        <Border Grid.Row="2" Grid.ColumnSpan="1" Style="{StaticResource Card}">
            <StackPanel>
                <TextBlock Text="Recent Numbers" FontWeight="SemiBold" FontSize="14"/>
                <ItemsControl ItemsSource="{Binding RecentSpins}" Margin="0,8,0,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,12,0" HorizontalAlignment="Center">
                                <Border Width="46" Height="46" CornerRadius="23"
                                        Background="{Binding Color, Converter={StaticResource SpinColorToBrushConverter}}"
                                        HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding Number}" FontSize="18" FontWeight="Bold" Foreground="White"
                                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="{Binding ColorLabel}" FontSize="11" Margin="0,6,0,0"
                                           HorizontalAlignment="Center" Foreground="#555"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
    </Grid>
</controls:MetroWindow>
