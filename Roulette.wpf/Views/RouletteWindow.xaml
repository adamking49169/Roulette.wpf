<controls:MetroWindow x:Class="Roulette.Wpf.Views.RouletteWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:viewModels="clr-namespace:Roulette.Wpf.ViewModels"
    xmlns:conv="clr-namespace:Roulette.Wpf.Converters"
    Title="Roulette" Width="1180" Height="760" WindowStartupLocation="CenterScreen">

    <!-- ViewModel -->
    <controls:MetroWindow.DataContext>
        <viewModels:GameViewModel/>
    </controls:MetroWindow.DataContext>

    <!-- Resources -->
    <controls:MetroWindow.Resources>
        <!-- Felt + number colours -->
        <SolidColorBrush x:Key="Felt" Color="#175a2b"/>
        <SolidColorBrush x:Key="FeltDark" Color="#0f4721"/>
        <SolidColorBrush x:Key="FeltBorder" Color="#E6E6E6"/>
        <SolidColorBrush x:Key="NumRed" Color="#b12c2c"/>
        <SolidColorBrush x:Key="NumBlack" Color="#222222"/>
        <SolidColorBrush x:Key="NumGreen" Color="#0e7a3a"/>

        <!-- Converters -->
        <conv:SpinColorToBrushConverter x:Key="SpinColorToBrushConverter"/>
        <conv:ValueToChipBrushConverter x:Key="ChipBrushConverter"/>
        <conv:IntToVisibilityConverter x:Key="IntToVis"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Card wrapper used on right -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <!-- ===== CHIP (casino-style) ===== -->
        <!-- Expects DataContext with Stake (int) and ChipBrush (Brush) -->
        <DataTemplate x:Key="ChipTemplate">
            <Grid Width="34" Height="34">
                <Ellipse Fill="{Binding ChipBrush}" Stroke="White" StrokeThickness="4" StrokeDashArray="1,2" />
                <Ellipse Width="22" Height="22" Fill="White" Opacity="0.92"/>
                <TextBlock Text="{Binding Stake}"
                           FontWeight="Bold" FontSize="12"
                           HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#222"/>
                <Grid.Effect>
                    <DropShadowEffect BlurRadius="6" ShadowDepth="0" Color="#55000000"/>
                </Grid.Effect>
            </Grid>
        </DataTemplate>

        <!-- ===== RECTANGULAR CELL (numbers & outside) ===== -->
        <!-- Bindings: Key, Label, Background, Stake -->
        <DataTemplate x:Key="RectCellTemplate">
            <Button Command="{Binding DataContext.AddStakeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                    CommandParameter="{Binding Key}"
                    Background="{Binding Background}"
                    BorderBrush="{DynamicResource FeltBorder}" BorderThickness="2"
                    Margin="2" Padding="0" Height="64" Cursor="Hand">
                <Grid>
                    <TextBlock Text="{Binding Label}" Foreground="White"
                               FontSize="18" FontWeight="SemiBold"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <!-- Chip badge -->
                    <ContentPresenter ContentTemplate="{StaticResource ChipTemplate}"
                                      HorizontalAlignment="Right" VerticalAlignment="Top" Margin="4"
                                      Visibility="{Binding Stake, Converter={StaticResource IntToVis}}"/>
                </Grid>
            </Button>
        </DataTemplate>

        <!-- ===== TALL ZERO CELL (same rules, taller) ===== -->
        <DataTemplate x:Key="ZeroCellTemplate">
            <Button Command="{Binding DataContext.AddStakeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                    CommandParameter="{Binding Key}"
                    Background="{DynamicResource NumGreen}"
                    BorderBrush="{DynamicResource FeltBorder}" BorderThickness="2"
                    Margin="2" Padding="0" Height="206" Cursor="Hand">
                <Grid>
                    <TextBlock Text="{Binding Label}" Foreground="White"
                               FontSize="26" FontWeight="Bold"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <!-- Chip only when stake > 0 -->
                    <ContentPresenter ContentTemplate="{StaticResource ChipTemplate}"
                                      HorizontalAlignment="Right" VerticalAlignment="Top" Margin="4"
                                      Visibility="{Binding Stake, Converter={StaticResource IntToVis}}"/>
                </Grid>
            </Button>
        </DataTemplate>
    </controls:MetroWindow.Resources>

    <!-- ===== LAYOUT ===== -->
    <Grid Background="#F4F6F8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="430"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="3"
                   Text="European Roulette"
                   FontSize="20" FontWeight="SemiBold"
                   Margin="12,10,12,0"/>

        <!-- ===== LEFT: REALISTIC TABLE ===== -->
        <Border Grid.Row="1" Grid.Column="0"
                Background="{DynamicResource Felt}" CornerRadius="14"
                BorderBrush="{DynamicResource FeltBorder}" BorderThickness="2" Padding="10" Margin="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- numbers block -->
                    <RowDefinition Height="10"/>
                    <!-- gap -->
                    <RowDefinition Height="Auto"/>
                    <!-- dozens -->
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>
                    <!-- even money -->
                </Grid.RowDefinitions>

                <!-- ==== Numbers area ==== -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="92"/>
                        <!-- zero -->
                        <ColumnDefinition Width="*" />
                        <!-- 3x12 numbers -->
                        <ColumnDefinition Width="120"/>
                        <!-- 2 to 1 buttons -->
                    </Grid.ColumnDefinitions>

                    <!-- Tall 0 at left via ItemsControl so bindings behave exactly like other cells -->
                    <ItemsControl Grid.Column="0" ItemsSource="{Binding ZeroCell}"
                                  ItemTemplate="{StaticResource ZeroCellTemplate}"/>

                    <!-- 3 × 12 number grid (top row 3/6/9..., mid 2/5/8..., bottom 1/4/7...) -->
                    <ItemsControl Grid.Column="1" ItemsSource="{Binding NumberCells}"
                                  ItemTemplate="{StaticResource RectCellTemplate}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="3" Columns="12"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>

                    <!-- Right 2 to 1 (columns) -->
                    <Grid Grid.Column="2" Margin="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Button Grid.Row="2" Command="{Binding AddStakeCommand}" CommandParameter="CL:1"
                                Background="{DynamicResource FeltDark}" Foreground="White"
                                BorderBrush="{DynamicResource FeltBorder}" BorderThickness="2"
                                Margin="2" Height="64" Cursor="Hand" Content="2 to 1"/>

                        <Button Grid.Row="1" Command="{Binding AddStakeCommand}" CommandParameter="CL:2"
                                Background="{DynamicResource FeltDark}" Foreground="White"
                                BorderBrush="{DynamicResource FeltBorder}" BorderThickness="2"
                                Margin="2" Height="64" Cursor="Hand" Content="2 to 1"/>

                        <Button Grid.Row="0" Command="{Binding AddStakeCommand}" CommandParameter="CL:3"
                                Background="{DynamicResource FeltDark}" Foreground="White"
                                BorderBrush="{DynamicResource FeltBorder}" BorderThickness="2"
                                Margin="2" Height="64" Cursor="Hand" Content="2 to 1"/>
                    </Grid>
                </Grid>

                <!-- ==== Dozens ==== -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Command="{Binding AddStakeCommand}" CommandParameter="DZ:1"
                            Background="{DynamicResource FeltDark}" Foreground="White"
                            BorderBrush="{DynamicResource FeltBorder}" BorderThickness="2"
                            Margin="2" Height="52" Cursor="Hand" Content="1st 12"/>
                    <Button Grid.Column="1" Command="{Binding AddStakeCommand}" CommandParameter="DZ:2"
                            Background="{DynamicResource FeltDark}" Foreground="White"
                            BorderBrush="{DynamicResource FeltBorder}" BorderThickness="2"
                            Margin="2" Height="52" Cursor="Hand" Content="2nd 12"/>
                    <Button Grid.Column="2" Command="{Binding AddStakeCommand}" CommandParameter="DZ:3"
                            Background="{DynamicResource FeltDark}" Foreground="White"
                            BorderBrush="{DynamicResource FeltBorder}" BorderThickness="2"
                            Margin="2" Height="52" Cursor="Hand" Content="3rd 12"/>
                </Grid>

                <!-- ==== Even-money ==== -->
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Command="{Binding AddStakeCommand}" CommandParameter="LH:Low"
                            Background="{DynamicResource FeltDark}" Foreground="White"
                            BorderBrush="{DynamicResource FeltBorder}" BorderThickness="2"
                            Margin="2" Height="52" Cursor="Hand" Content="1 - 18"/>

                    <Button Grid.Column="1" Command="{Binding AddStakeCommand}" CommandParameter="EO:Even"
                            Background="{DynamicResource FeltDark}" Foreground="White"
                            BorderBrush="{DynamicResource FeltBorder}" BorderThickness="2"
                            Margin="2" Height="52" Cursor="Hand" Content="Even"/>

                    <!-- Red diamond -->
                    <Button Grid.Column="2" Command="{Binding AddStakeCommand}" CommandParameter="RB:Red"
                            Background="{DynamicResource FeltDark}" BorderBrush="{DynamicResource FeltBorder}"
                            BorderThickness="2" Margin="2" Height="52" Cursor="Hand">
                        <Grid>
                            <Rectangle Width="28" Height="28" Fill="#b12c2c" Stroke="White" StrokeThickness="2"
                                        HorizontalAlignment="Center" VerticalAlignment="Center"
                                        RenderTransformOrigin="0.5,0.5">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="45"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                        </Grid>
                    </Button>

                    <!-- Black diamond -->
                    <Button Grid.Column="3" Command="{Binding AddStakeCommand}" CommandParameter="RB:Black"
                            Background="{DynamicResource FeltDark}" BorderBrush="{DynamicResource FeltBorder}"
                            BorderThickness="2" Margin="2" Height="52" Cursor="Hand">
                        <Grid>
                            <Rectangle Width="28" Height="28" Fill="#222" Stroke="White" StrokeThickness="2"
                                        HorizontalAlignment="Center" VerticalAlignment="Center"
                                        RenderTransformOrigin="0.5,0.5">
                                <Rectangle.RenderTransform>
                                    <RotateTransform Angle="45"/>
                                </Rectangle.RenderTransform>
                            </Rectangle>
                        </Grid>
                    </Button>


                    <Button Grid.Column="4" Command="{Binding AddStakeCommand}" CommandParameter="EO:Odd"
                            Background="{DynamicResource FeltDark}" Foreground="White"
                            BorderBrush="{DynamicResource FeltBorder}" BorderThickness="2"
                            Margin="2" Height="52" Cursor="Hand" Content="Odd"/>

                    <Button Grid.Column="5" Command="{Binding AddStakeCommand}" CommandParameter="LH:High"
                            Background="{DynamicResource FeltDark}" Foreground="White"
                            BorderBrush="{DynamicResource FeltBorder}" BorderThickness="2"
                            Margin="2" Height="52" Cursor="Hand" Content="19 - 36"/>
                </Grid>
            </Grid>
        </Border>

        <!-- ===== RIGHT: BETS + RESULT + CHIP PICKER ===== -->
        <StackPanel Grid.Row="1" Grid.Column="2">
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Current Bets" FontWeight="SemiBold" FontSize="14"/>
                    <ListView ItemsSource="{Binding Bets}" Margin="0,8,0,0" Height="300">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Type"   Width="140" DisplayMemberBinding="{Binding Type}"/>
                                <GridViewColumn Header="Details" Width="220" DisplayMemberBinding="{Binding Description}"/>
                                <GridViewColumn Header="Stake"   Width="80"  DisplayMemberBinding="{Binding Stake}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <!-- Chip picker -->
                    <TextBlock Text="Chips" Margin="0,10,0,4" FontWeight="SemiBold"/>
                    <ListBox ItemsSource="{Binding ChipValues}"
                             SelectedItem="{Binding SelectedChipValue, Mode=TwoWay}"
                             BorderThickness="0" Background="Transparent">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="34" Height="34" Margin="0,0,8,8">
                                    <Ellipse Fill="{Binding Converter={StaticResource ChipBrushConverter}}"
                                             Stroke="White" StrokeThickness="4" StrokeDashArray="1,2"/>
                                    <Ellipse Width="22" Height="22" Fill="White" Opacity="0.92"/>
                                    <TextBlock Text="{Binding}" FontWeight="Bold" FontSize="12"
                                               HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#222"/>
                                    <Grid.Effect>
                                        <DropShadowEffect BlurRadius="6" ShadowDepth="0" Color="#55000000"/>
                                    </Grid.Effect>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="ToolTip" Value="{Binding}"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="8" ShadowDepth="0" Color="#88000000"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource Card}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Result" FontWeight="SemiBold" FontSize="14"/>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Border Width="72" Height="72" CornerRadius="36"
                                    Background="{Binding LastSpinColor, Converter={StaticResource SpinColorToBrushConverter}}">
                                <TextBlock Text="{Binding LastSpinNumber}"
                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                           FontSize="20" FontWeight="Bold" Foreground="White"/>
                            </Border>
                            <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="{Binding LastSpinLabel}" FontSize="14"/>
                                <TextBlock Text="{Binding LastNetResult, StringFormat=Net: {0:+#;-#;0}}"
                                           FontSize="16" FontWeight="SemiBold"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Button Content="Spin" Width="160" Height="44" Command="{Binding SpinCommand}"/>
                        <Button Content="Clear Bets" Width="160" Margin="0,8,0,0" Command="{Binding ClearBetsCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</controls:MetroWindow>
